<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daily1"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/moodImageView"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            app:srcCompat="@drawable/mood5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentsTextView"
                android:textColor="@color/gray"
                android:text="내용"
                android:textSize="22sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/weatherImageView"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/weather1"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/pictureExistsImageView"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/weatherImageView"
                    android:src="@drawable/picture_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/lightgray"
                    android:text="서북구 두정동"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateTextView"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="05월10일"
                    android:textColor="@color/lightgray"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daily2"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/pictureImageView"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/no_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentsTextView2"
                android:textColor="@color/gray"
                android:text="내용"
                android:textSize="22dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/moodImageView2"
                    android:layout_alignParentLeft="true"
                    android:padding="0dp"
                    app:srcCompat="@drawable/mood5"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/weatherImageView2"
                    android:layout_toRightOf="@+id/moodImageView2"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weather1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationTextView2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/lightgray"
                    android:text="서북구 두정동"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateTextView2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="05월10일"
                    android:textColor="@color/lightgray"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>